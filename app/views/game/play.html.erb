<div>
  <% start_time = Time.now %>
  <h1>Welcome to the longest word-game !</h1>
  <h2>Here is your grid :</h2>
  <p class="letters"><%= @grid.join(" ")%></p>

  <h3>What's your best shot ?</h3>
    <form action="/score" method="get">
      <div class="form-group">
        <input type="text" id="question" name="answer" placeholder="Longest word..." class="form-control">
        <input type="hidden" name="start_time" value="<%= start_time %>">
      </div>
      <input type="submit" value="Go on!" class="btn btn-primary">
    </form>
</div>
